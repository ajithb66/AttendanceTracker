<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/backgroundBlue"
    tools:context="com.example.beemathangarani.attendancetracker.TakeAttendanceActivity">

    <EditText
        style="@style/EditorFieldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextclass"
        android:layout_alignParentTop="true"
        android:layout_marginTop="71dp"
        android:hint="@string/Class"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        style="@style/EditorFieldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextsubj"
        android:layout_below="@+id/editTextclass"
        android:layout_marginTop="35dp"
        android:hint="@string/Subject"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextclass" />

    <Button
        style="@style/buttonStyle"
        android:background="@color/buttonColor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/view"
        android:id="@+id/buttonview"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="99dp" />

    <EditText
        style="@style/EditorFieldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="@string/date"
        android:ems="10"
        android:id="@+id/date"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
